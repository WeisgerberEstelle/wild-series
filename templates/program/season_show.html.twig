{% extends 'base.html.twig' %}


{% block title %}Saison {{ season.number}}
{% endblock %}


{% block body %}

	<div class="media">

		<div class="media-body">

			<h1 class="mt-0">Saison {{ season.number }} de {{ program.title }}</h1>

			<p>{{ season.description }}</p>

		</div>

	</div>
	<h2>Liste des épisodes</h2>
	<ul>	
	 {% for episode in season.episodes %}
	 
	 <li><a href="{{ path('program_episode_show', {program: program.id, season: season.id, episode: episode.id}) }}" >Episode {{ episode.number }} : {{episode.title}}</a></li>
	 {% endfor %}
	</ul>
	<a href="{{ path('program_index') }}">

		Retour à la liste des programmes

	</a>

{% endblock %}
