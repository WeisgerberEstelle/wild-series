{% extends 'base.html.twig' %}


{% block title %}Série #{{ program.id }}
{% endblock %}


{% block body %}

	<div class="media">

		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

		<div class="media-body">

			<h1 class="mt-0">{{ program.title }}</h1>

			<p>{{ program.summary }}</p>

			<p>Catégorie :
				{{ program.category.name }}</p>

		</div>

	</div>
	<ul>
		{% for season in seasons %}
			<li>
				<a href="{{ path('program_season_show', {program: season.program.id, season: season.id}) }}">Saison
					{{ season.number }}</a>
			</li>
		{% endfor %}
	</ul>
	{% if is_granted("ROLE_ADMIN") %}

		<a href="{{ path('program_edit', { 'slug': program.slug} ) }}">Éditer</a>

	{% endif %}

		<a href="{{ path('program_index') }}">

			Retour à la liste des programmes

		</a>

		<strong>Acteur :</strong>
		<ul>
			{% for actor in program.actors %}
				<li>
					<a href="{{ path("actor_show", { id: actor.id }) }}">{{actor.name}}</a>
				</li>
			{% else %}
				<li>
					Aucun acteur pour cette série
				</li>
			{% endfor %}
		</ul>

	{% endblock %}
